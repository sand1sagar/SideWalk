<!DOCTYPE html>
<html class="no-js">
<head>
    <title>@ViewBag.Title</title>
    <!-- Bootstrap -->
    @*@Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")*@

    @Styles.Render("~/Content/css")

    @Scripts.Render("~/bundles/jquery")

    @RenderSection("scripts", required: false)
    <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
        <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
    @*<script src="/vendors/modernizr-2.6.2-respond-1.1.0.min.js"></script>*@
</head>
<body>
    <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container-fluid">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>
                <a class="brand" href="/Home/GetAllAffidavit">Sidewalk Posting </a>
                <div class="nav-collapse collapse">
                    @Html.Partial("_LoginPartial")
                    @Html.Partial("_Navigation")
                </div>
                <!--/.nav-collapse -->
            </div>
        </div>
    </div>
    <div class="container-fluid">
        @RenderBody()
        <hr>
        <footer>
            <p>&copy; Sidewalk Posting @DateTime.Now.Year</p>
        </footer>
    </div>
    <!--/.fluid-container-->
    <script type="text/javascript">
        $(document).ready(function () {
            $('.cls-affidavit-update').click(function () {
                debugger;
                if ($(this).attr('id').split('-')[1] == 1) {

                    if (confirm('Do you want to mark for form pour?')) {
                        $.ajax({
                            type: 'get',
                            url: AppURLSettings.UpdateAffidavitStatus + '?affidavitNo=' + $(this).attr('id').split('-')[0] + '&statusValue=' + $(this).attr('id').split('-')[1] + '&inspectorId=' + $('#hdnInspectorId').val(),
                            success: function (result) {
                                $('#txtAffidavitStatus').val(result);
                            }
                        });
                    }
                }
                else if ($(this).attr('id').split('-')[1] == 4) {

                    if (confirm('Do you want to mark for final?')) {
                        $.ajax({
                            type: 'get',
                            url: AppURLSettings.UpdateAffidavitStatus + '?affidavitNo=' + $(this).attr('id').split('-')[0] + '&statusValue=' + $(this).attr('id').split('-')[1] + '&inspectorId=' + $('#hdnInspectorId').val(),
                            success: function (result) {
                                $('#txtAffidavitStatus').val(result);
                            }
                        });
                    }
                }
                else if ($(this).attr('id').split('-')[1] == 5)
                { }
            });
        });
    </script>
</body>
</html>
